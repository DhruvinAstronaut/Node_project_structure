        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">User Details </h3>

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0" style="height: 300px;">
                <table class="table table-head-fixed text-nowrap">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>First Name</th>
                      <th>Last Name</th>
                      <th>Age</th>
                      <th>City</th>
                      <th>Email</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% count = 1 %>
                    <% let id;%>
                    <% records.forEach(function(row){%>
                      <p style="display: none;"><%=id = row.id %></p>
                    <tr>
                      <td><%=row.id %></td>
                      <td><%= row.first_name %></td>
                      <td><%= row.last_name %></td>
                      <td><%= row.age %></td>
                      <td><%= row.city %></td>
                      <td><%= row.email %></td>
                 
                      <td> <a href='form?id=<%=row.id %>'> <span style="font-size: 1em; color: rgb(10, 111, 174);">
                        <i class="fa-solid fa-user-pen"></i></span> </a> &nbsp;
                        <a href='#' data-toggle="modal" data-target="#my-modal"> <span style="font-size: 1.2em; color: red;">
                          <i class="fa-solid fa-trash-can"></i></span> 
                          <!-- <button class="btn btn-danger " data-toggle="modal" data-target="#my-modal">Confirm Delete</button> -->
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                  
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
       
